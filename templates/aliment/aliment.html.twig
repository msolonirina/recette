{% extends 'base.html.twig' %}

{% block title %} Les aliments {% endblock %}

{% block monTitre %}
Liste de tous les aliments 
{% if isCalorie %} 
avec moins de 50 calories 
{% elseif isGlucide %} 
avec moins de 5 glucides
{% endif %}
{% endblock %}


{% block body %}
<a href="{{path('aliments')}}">Tous</a>
<a href="{{path("alimentsParCalorie", {"calorie": 50})}}">Aliments avec moins de 50 calories au 100g</a>
<a href="{{path("alimentsParGlucide", {"glucide": 5})}}">Aliments avec moins de 5 glucides au 100g</a>
    <div class="row">
        {% for aliment in listAliments %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto " style="max-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/aliments/' ~ aliment.image)}}" class="perso_imgAliment card-img-top" >
                    </div>
                </div>
                <div class="card-body">
                    <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{ aliment.nom }}</h3>
                    <p class="card-text">
                        <h4 class="text-center">Prix (kilo) : {{ aliment.prix }}</h4>
                        <h4 class="text-center">Types : {{ aliment.type.libelle }}</h4>
                        <table class="table text-center">
                            <tr class="table-primary">
                                <td>Propriété</td>
                                <td>Valeur (100g)</td>
                            </tr>
                            <tr>
                                <td>Proteine</td>
                                <td>{{ aliment.proteine}}</td>
                            </tr>
                            <tr>
                                <td>Glucices</td>
                                <td>{{ aliment.glucides}}</td>
                            </tr>
                            <tr>
                                <td>Lipides</td>
                                <td>{{ aliment.lipides}}</td>
                            </tr>

                        </table>
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
